---
import "remixicon/fonts/remixicon.css";
---

<header class="sticky top-0 w-full bg-theme z-50">
  <div class="container mx-auto px-4 md:px-28">
    <div class="flex justify-between items-center py-5">
      <a href="/">
        <div class="flex items-center space-x-4">
          <span>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="28"
              height="28"
              viewBox="0 0 515 515"
              class="h-7 w-7 fill-current text-theme"
            >
              <g id="Group 1">
                <rect
                  id="Rectangle 1"
                  x="237.327"
                  y="514.921"
                  width="514.269"
                  height="49.4265"
                  transform="rotate(-90.8164 237.327 514.921)"></rect>
                <rect
                  id="Rectangle 4"
                  x="0.0791626"
                  y="236.327"
                  width="514.269"
                  height="49.4265"
                  transform="rotate(-0.816392 0.0791626 236.327)"></rect>
                <rect
                  id="Rectangle 2"
                  x="93.9012"
                  y="59.0935"
                  width="514.269"
                  height="49.4265"
                  transform="rotate(45.084 93.9012 59.0935)"></rect>
                <rect
                  id="Rectangle 3"
                  x="457.906"
                  y="94.9012"
                  width="514.269"
                  height="49.4265"
                  transform="rotate(135.084 457.906 94.9012)"></rect>
              </g>
            </svg>
          </span>
          <span>
            <h2 class="text-lg font-semibold text-theme">Twenty Twenty-Four</h2>
          </span>
        </div>
      </a>

      <!-- Desktop Navigation -->
      <nav
        class="hidden md:flex items-center space-x-6 text-base tracking-wider font-medium text-theme"
      >
        <a href="/about" class="hover:underline">About</a>
        <div class="relative group">
          <a href="/templates" class="">
            <button class="hover:underline flex items-center gap-1">
              Templates
              <i class="ri-arrow-down-s-line text-theme"></i>
            </button>
          </a>
          <div
            class="absolute border border-gray-500 right-0 mt-2 w-50 bg-theme opacity-0 group-hover:opacity-100 group-hover:translate-y-1 transition-all duration-300 invisible group-hover:visible z-50"
          >
            <a href="/page" class="block px-4 py-2 hover:underline">Page</a>
            <a href="/post" class="block px-4 py-2 hover:underline">Post</a>
            <a href="/archive" class="block px-4 py-2 hover:underline"
              >Archive</a
            >
            <a href="/404" class="block px-4 py-2 hover:underline">404</a>
            <a href="/search" class="block px-4 py-2 hover:underline">Search</a>
          </div>
        </div>
        <div class="relative group">
          <a href="#" class="">
            <button class="hover:underline flex items-center gap-1">
              Patterns
              <i class="ri-arrow-down-s-line text-theme"></i>
            </button>
          </a>
          <div
            class="absolute border border-gray-500 right-0 mt-2 w-50 bg-theme opacity-0 group-hover:opacity-100 group-hover:translate-y-1 transition-all duration-300 invisible group-hover:visible z-50"
          >
            <a href="#" class="block px-4 py-2 hover:underline"
              >Full Page Patterns</a
            >
            <a href="/services" class="block px-4 py-2 hover:underline"
              >Services</a
            >
            <a href="/pricing" class="block px-4 py-2 hover:underline"
              >Pricing</a
            >
            <a href="/team" class="block px-4 py-2 hover:underline">Team</a>
            <a href="/testimonials" class="block px-4 py-2 hover:underline"
              >Testimonial</a
            >
            <a href="/calltoaction" class="block px-4 py-2 hover:underline"
              >Call To Action Banner</a
            >
            <a href="faqs" class="block px-4 py-2 hover:underline">FAQS</a>
            <a href="/clientlogo" class="block px-4 py-2 hover:underline">Client Logos</a>
            <a href="features" class="block px-4 py-2 hover:underline"
              >Features Section</a
            >
            <a href="/" class="block px-4 py-2 hover:underline"
              >Centered Statement</a
            >
          </div>
        </div>
        <div class="relative group">
          <a href="#" class="">
            <button class="hover:underline flex items-center gap-1">
              Style Variations
              <i class="ri-arrow-down-s-line text-theme"></i>
            </button>
          </a>
          <div
            class="absolute border border-gray-500 right-0 mt-2 w-52 bg-theme rounded-md shadow-lg opacity-0 group-hover:opacity-100 group-hover:translate-y-1 transition-all duration-300 invisible group-hover:visible z-50"
          >
            <div class="px-4 py-3">
              <label
                for="theme-select"
                class="block text-sm font-medium mb-1 text-theme"
                >Choose Theme</label
              >
              <select
                id="theme-select"
                onchange="setTheme(this.value)"
                class="w-full border border-gray-300 rounded px-2 py-1 text-sm text-theme bg-theme"
              >
                <option value="default">Default</option>
                <option value="dark">Dark</option>
                <option value="fun">Fun</option>
                <option value="professional">Professional</option>
                <option value="earth">Earth Tones</option>
              </select>
            </div>
          </div>
        </div>
        <div class="relative group">
          <a href="#" class="">
            <button class="hover:underline flex items-center gap-1">
              Demo
              <i class="ri-arrow-down-s-line text-theme"></i>
            </button>
          </a>
          <div
            class="absolute border border-gray-500 right-0 mt-2 w-50 bg-theme opacity-0 group-hover:opacity-100 group-hover:translate-y-1 transition-all duration-300 invisible group-hover:visible z-50"
          >
            <a href="#" class="block px-4 py-2 hover:underline">Entrepreneur</a>
            <a href="#" class="block px-4 py-2 hover:underline">Blogger</a>
            <a href="#" class="block px-4 py-2 hover:underline">Photographer</a>
          </div>
        </div>
      </nav>

      <!-- Mobile menu button -->
      <button
        id="mobile-menu-button"
        class="md:hidden focus:outline-none text-theme"
      >
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden bg-theme pb-5 px-4">
      <div class="flex flex-col space-y-4 text-theme">
        <a href="/about" class="block hover:underline">About</a>

        <!-- Templates Dropdown -->
        <div>
          <button class="w-full text-left dropdown-toggle hover:underline"
            >Templates</button
          >
          <div class="dropdown-content hidden pl-4 mt-2 space-y-2">
            <a href="/page" class="block hover:underline">Page</a>
            <a href="/post" class="block hover:underline">Post</a>
            <a href="/archive" class="block hover:underline">Archive</a>
            <a href="/404" class="block hover:underline">404</a>
            <a href="/search" class="block hover:underline">Search</a>
          </div>
        </div>

        <!-- Patterns Dropdown -->
        <div>
          <button class="w-full text-left dropdown-toggle hover:underline"
            >Patterns</button
          >
          <div class="dropdown-content hidden pl-4 mt-2 space-y-2">
            <a href="#" class="block hover:underline">Full Page Patterns</a>
            <a href="/services" class="block hover:underline">Services</a>
            <a href="/pricing" class="block hover:underline">Pricing</a>
            <a href="/team" class="block hover:underline">Team</a>
            <a href="/testimonials" class="block hover:underline">Testimonial</a
            >
            <a href="/calltoaction" class="block hover:underline"
              >Call To Action</a
            >
            <a href="/faqs" class="block hover:underline">FAQS</a>
            <a href="/clientlogo" class="block hover:underline">Client Logos</a>
            <a href="#" class="block hover:underline">Features Section</a>
            <a href="#" class="block hover:underline">Centered Statement</a>
          </div>
        </div>

        <!-- Style Variations Dropdown -->
        <div>
          <button class="w-full text-left dropdown-toggle hover:underline"
            >Style Variations</button
          >
          <div class="dropdown-content hidden pl-4 mt-2 space-y-2">
            <label
              for="theme-select-mobile"
              class="text-sm font-medium text-theme">Choose Theme</label
            >
            <select
              id="theme-select-mobile"
              onchange="setTheme(this.value)"
              class="w-full border border-gray-400 rounded-md px-3 py-2 text-sm text-theme bg-theme focus:outline-none focus:ring-2 focus:ring-offset-1 focus:ring-theme"
            >
              <option value="default">Default</option>
              <option value="dark">Dark</option>
              <option value="fun">Fun</option>
              <option value="professional">Professional</option>
              <option value="earth">Earth Tones</option>
            </select>
          </div>
        </div>

        <!-- Demo Dropdown -->
        <div>
          <button class="w-full text-left dropdown-toggle hover:underline"
            >Demo</button
          >
          <div class="dropdown-content hidden pl-4 mt-2 space-y-2">
            <a href="#" class="block hover:underline">Entrepreneur</a>
            <a href="#" class="block hover:underline">Blogger</a>
            <a href="#" class="block hover:underline">Photographer</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<script is:inline>
  document
    .getElementById("mobile-menu-button")
    .addEventListener("click", function () {
      const menu = document.getElementById("mobile-menu");
      menu.classList.toggle("hidden");
    });

  // Dropdown toggle logic
  document.querySelectorAll(".dropdown-toggle").forEach((button) => {
    button.addEventListener("click", () => {
      const dropdown = button.nextElementSibling;
      dropdown.classList.toggle("hidden");
    });
  });
</script>
