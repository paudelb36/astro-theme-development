---
import CategoryCard from "../components/CategoryCard.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import SearchBar from "../components/SearchBar.astro";
import "../styles/global.css";

import { cardDetails } from "../data/cardDetails.js";
---

<Header />
<div class="py-28 px-28 bg-[#f9f9f9]">
 <p class="cardo-regular text-5xl">Search results for: "materials"</p>
  <SearchBar />
  <div class="grid grid-cols-1 md:grid-cols-3 justify-self-center gap-10">
    {
      cardDetails.slice(0,2).map((card) => (
        <CategoryCard
          title={card.title}
          description={card.description}
          image={card.image}
        />
      ))
    }
  </div>
</div>

<Footer />
